{
    "name": "iperamuna/supervisor-manager",
    "description": "A comprehensive FilamentPHP dashboard for managing Supervisor processes and configurations in Laravel applications.",
    "keywords": [
        "laravel",
        "filament",
        "supervisor",
        "process-manager",
        "queue",
        "worker",
        "ui"
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Iperamuna\\SupervisorManager\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Indunil Peramuna",
            "email": "iperamun@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/support": "^11.0|^12.0",
        "laravel/prompts": "^0.3"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Iperamuna\\SupervisorManager\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iperamuna\\SupervisorManager\\SupervisorManagerServiceProvider",
                "Iperamuna\\SupervisorManager\\SupervisorPanelProvider"
            ],
            "aliases": {
                "SupervisorApi": "Iperamuna\\SupervisorManager\\Facades\\SupervisorApi"
            }
        }
    },
    "scripts": {
        "build": "npx @tailwindcss/cli -i resources/css/theme.css -o resources/dist/theme.css"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}